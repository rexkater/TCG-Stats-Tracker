generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MatchResult {
  WIN
  LOSS
  DRAW
}

enum Initiative {
  FIRST
  SECOND
}

model User {
  id                    String            @id @default(cuid())
  username              String            @unique
  password              String?           // Null for OAuth-only users
  email                 String?           @unique // Optional for username-only auth
  emailVerified         DateTime?
  image                 String?
  resetToken            String?           @unique
  resetTokenExpiry      DateTime?
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt

  // Relations
  projects              Project[]
  matchupNotesLogs      MatchupNotesLog[]
  accounts              Account[]
  sessions              Session[]

  @@index([username])
  @@index([email])
  @@index([resetToken])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model TCG {
  id               String             @id @default(cuid())
  name             String             @unique
  settingsJson     String             @default("{}") // JSON string for TCG-specific config
  projects         Project[]
  contextOptions   ContextOption[]
  matchupNotesLogs MatchupNotesLog[]
  createdAt        DateTime           @default(now())
}

model ContextOption {
  id                    String   @id @default(cuid())
  tcg                   TCG      @relation(fields: [tcgId], references: [id])
  tcgId                 String
  name                  String
  active                Boolean  @default(true)

  // Back-relations for Entry battlefields
  myBattlefieldEntries  Entry[]  @relation("MyBattlefield")
  oppBattlefieldEntries Entry[]  @relation("OppBattlefield")

  createdAt             DateTime @default(now())

  @@unique([tcgId, name])
  @@index([tcgId])
}

model Project {
  id               String            @id @default(cuid())
  name             String
  tcg              TCG               @relation(fields: [tcgId], references: [id])
  tcgId            String
  archivedAt       DateTime?
  categories       Category[]
  decks            Deck[]
  entries          Entry[]
  owners           User[]
  matchupNotesLogs MatchupNotesLog[]
  createdAt        DateTime          @default(now())

  @@index([tcgId])
}

model Category {
  id        String   @id @default(cuid())
  name      String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  active    Boolean  @default(true)

  entries   Entry[]  // back-relation to Entry.category

  @@unique([projectId, name])
  @@index([projectId])
}

model Deck {
  id        String            @id @default(cuid())
  name      String
  project   Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  active    Boolean           @default(true)

  images    DeckImage[]

  // back-relations for MatchupNotesLog
  notesAsDeckA MatchupNotesLog[] @relation("DeckANotes")
  notesAsDeckB MatchupNotesLog[] @relation("DeckBNotes")

  createdAt DateTime          @default(now())

  @@unique([projectId, name])
  @@index([projectId])
}

model DeckImage {
  id        String   @id @default(cuid())
  deck      Deck     @relation(fields: [deckId], references: [id])
  deckId    String
  url       String
  createdAt DateTime @default(now())
}

model Entry {
  id                  String         @id @default(cuid())
  project             Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId           String

  // Free text deck names (changed from foreign keys)
  myDeckName          String
  oppDeckName         String

  category            Category       @relation(fields: [categoryId], references: [id])
  categoryId          String

  // Battlefields (context options) - optional
  myBattlefield       ContextOption? @relation("MyBattlefield", fields: [myBattlefieldId], references: [id])
  myBattlefieldId     String?
  oppBattlefield      ContextOption? @relation("OppBattlefield", fields: [oppBattlefieldId], references: [id])
  oppBattlefieldId    String?

  result              MatchResult
  initiative          Initiative
  wonDiceRoll         Boolean?       // Did the player win the pre-game dice roll?
  notesShort          String?

  // Best-of-3 tracking
  gameNumber          Int?           // 1, 2, or 3 for games in a series
  seriesId            String?        // Groups games in the same match

  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt

  @@index([projectId, myDeckName, oppDeckName])
  @@index([projectId, initiative])
  @@index([projectId, seriesId])
}

model MatchupNotesLog {
  id              String   @id @default(cuid())
  project         Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId       String
  tcg             TCG      @relation(fields: [tcgId], references: [id])
  tcgId           String
  deckA           Deck     @relation("DeckANotes", fields: [deckAId], references: [id])
  deckAId         String
  deckB           Deck     @relation("DeckBNotes", fields: [deckBId], references: [id])
  deckBId         String
  author          User     @relation(fields: [authorUserId], references: [id])
  authorUserId    String
  contentMarkdown String
  pinned          Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([projectId, deckAId, deckBId])
  @@index([projectId, pinned])
}
